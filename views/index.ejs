<!DOCTYPE html>
<html ng-app="app">
<head>
  <title>DevLine</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" href="/assets/favicon.ico" sizes="16x16">
  <link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet' type='text/css'>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
</head>
<body>


  <div class="session">
  <$ if (user) { $>
    <nav class="navbar navbar-default navbar-fixed-top affix-top" ng-controller="NavController as vm">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" ui-sref-active="active" ui-sref="dash">DevLine - X</a>
        </div>
        <div>
          <ul class="nav navbar-nav navbar-right">

          <li> <a ui-sref-active="active" ui-sref="clients">Clients</a> </li>
          <li> <a ui-sref-active="active" ui-sref="projects">Projects</a> </li>
          <li> <a href="/logout"></i>Logout</a> </li>
          </ul>
        </div>
      </div>
    </nav>
  <$ } else { $>
    <nav class="navbar navbar-default navbar-fixed-top affix-top" ng-controller="NavController as vm">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" ui-sref-active="active" ui-sref="home">DevLine - X</a>
        </div>
        <div>
          <ul class="nav navbar-nav navbar-right">
          <li><a href="/auth/google">Login with Google</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <header>
      <div class="header-content">
        <div class="header-content-inner">
          <h1 style="font-size: 65px;">Welcome to Devline-X</h1>
          <hr>
          <p> The number one source for freelance web developers and teams to manage their projects, clients, and keep track of everything in a free simple way!</p>
        </div>
      </div>
    </header>
  <$ } $>
  </div>

  <div ui-view></div>

  <script src="js/app.js"></script>
  <script src="controllers/dash-controller.js"></script>
  <script src="controllers/nav-controller.js"></script>
  <script src="services/client-dataService.js"></script>
</body>
</html>
